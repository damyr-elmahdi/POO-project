                            but = customtkinter.CTkButton(win, text="continue", font=('Times New Roman',25,'bold'), text_color="white",height=40, bg_color="#232220", command=accuiel_page)

                            but.pack()
                            but.place(x=620, y=170)
                        
                            win.state("zoome")   
                            win.mainloop()
                            
