from tkinter import*
import customtkinter
from PIL import ImageTk, Image
from tkinter import messagebox
import tkinter as tk
from datetime import datetime, timedelta
import csv

class page_books():
    def Books(self):
        win1 = Tk()
        win1.title('Page1')

# ******************************************* Book 1 *************************************************        
